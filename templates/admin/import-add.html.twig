{% extends 'base.html.twig' %}

{% block title %}Admin - CSV Import - New{% endblock %}

{% block content %}
    <h2>Choose a CSV file</h2>
    {{ form_start(form) }}
        <div class="row">
            <div class="col-lg-12">
                {% if error is defined %}
                    <p>Error: {{ error }}</p>
                    {% if detailed_error is defined %}
                        <p>Details: {{ detailed_error }}</p>
                    {% endif %}
                {% endif %}
                {{ form_row(form.csv) }}
            </div>
        </div>
        <p>Must be comma separated (,).</p>
        <button class="btn btn-primary">Import</button>
    {{ form_end(form) }}
{% endblock %}