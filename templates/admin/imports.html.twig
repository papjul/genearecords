{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}
    <a class="btn btn-primary" href="{{ path('admin_import_new') }}">New</a>

    {% if imports %}
        <table class="table table-striped w-auto">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Initiated by</th>
                    <th>CSV file</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            {% for import in imports %}
                <tr>
                    <td>&nbsp;</td>
                    <td>&nbsp;</td>
                    <td>{{ import.csvFilename }}</td>
                    <td>{{ import.isReadyToBeImported ? (import.records|length > 0 ? 'Imported' : 'Ready') : 'Not ready' }}</td>
                    <td><a href="{{ path('admin_import_edit', {id: import.id}) }}">Edit</a></td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}
{% endblock %}