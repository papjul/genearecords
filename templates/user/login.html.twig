{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
    <div class="d-flex justify-content-center">
        <form method="post" class="mx-auto col-lg-5">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="row p-4">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input type="text" value="{{ last_username }}" name="_username" id="inputUsername"
                               class="form-control form-control-lg" placeholder="Utilisateur" required autofocus/>
                        <label for="inputUsername" class="sr-only">Utilisateur</label>
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input type="password" name="_password" id="inputPassword" class="form-control form-control-lg"
                               placeholder="Mot de passe" required/>
                        <label for="inputPassword" class="sr-only">Mot de passe</label>
                    </div>
                </div>
                <div class="col-12">
                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html
                    #}
                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"/> Se souvenir de moi (utilise un <em>cookie</em>)
                        </label>
                    </div>
                </div>
                <div class="col-12">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                    <button class="btn btn-primary w-100 btn-lg" type="submit">{{ 'ui.user.login'|trans }}</button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}